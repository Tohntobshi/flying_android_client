<resources>
    <declare-styleable name="Plot">
        <attr name="plotData" format="reference" />
        <attr name="valueRange" format="float" />
    </declare-styleable>
    <declare-styleable name="Joystick">
        <attr name="direction" format="float" />
    </declare-styleable>
    <declare-styleable name="Slider">
        <attr name="position" format="float" />
        <attr name="positionChangeMultiplier" format="float" />
        <attr name="minValue" format="float" />
        <attr name="maxValue" format="float" />
        <attr name="fractionDigits" format="integer" />
        <attr name="orientation" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="AccelerationSlider">
        <attr name="desiredHeight" format="float" />
        <attr name="mode" format="enum" />
        <attr name="relativeAcc" format="float" />
    </declare-styleable>
    <declare-styleable name="CurvePlot">
        <attr name="a" format="float" />
        <attr name="b" format="float" />
        <attr name="xSpan" format="float" />
        <attr name="ySpan" format="float" />
        <attr name="xLabel" format="string" />
        <attr name="yLabel" format="string" />
        <attr name="xMaxLabel" format="string" />
        <attr name="yMaxLabel" format="string" />
        <attr name="xMinLabel" format="string" />
        <attr name="yMinLabel" format="string" />
    </declare-styleable>
</resources>