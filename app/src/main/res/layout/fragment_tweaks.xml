<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable
            name="viewmodel"
            type="com.example.flyingandroidclient.MainActivityViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TweaksFragment"
        tools:background="@color/cardview_dark_background" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pitch error"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.pitchErrors}" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderPitchProp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.pitchPropCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderPitchInt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.pitchIntCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderPitchDer"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.pitchDerCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pitch err change rate"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"/>
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.pitchErrorChangeRates}" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accel trust"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderAccTrust"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.accTrust}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"
                    app:maxValue="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base acceleration"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderBaseAccel"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.baseAcceleartion}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"
                    app:maxValue="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height err"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"/>
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.heightErrors}"
                    app:valueRange="1.0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height P"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderHeightProp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.heightPropCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height I"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderHeightInt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.heightIntCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`fl ` + viewmodel.frontLeft + ` fr ` + viewmodel.frontRight}"
                    tools:text="fl 1000 fr 1000"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`bl ` + viewmodel.backLeft + ` br ` + viewmodel.backRight}"
                    tools:text="bl 1000 br 1000"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`desired height ` + viewmodel.controls.acceleration * 4.0f}"
                    tools:text="desired height 0"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{`current height err ` + viewmodel.currentHeightErr}"
                    tools:text="current height err 0"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="153dp"
                    android:text="P"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="I"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:text="D"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roll error"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.rollErrors}" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderRollProp"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.rollPropCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderRollInt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.rollIntCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderRollDer"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.rollDerCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Roll err change rate"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.rollErrorChangeRates}" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Incline Der Filtering"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderInclChRFilt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.inclineChangeRateFilteringCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"
                    app:maxValue="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Incline Filtering"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderInclFilt"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.inclineFilteringCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0"
                    app:maxValue="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height err change rate"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp"/>
                <com.example.flyingandroidclient.Plot
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:plotData="@{viewmodel.heightErrorChangeRates}"
                    app:valueRange="4.0" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height D"
                    android:textAlignment="center"
                    android:gravity="center_horizontal"
                    android:textSize="16dp" />
                <com.example.flyingandroidclient.Slider
                    android:id="@+id/sliderHeightDer"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    app:position="@{viewmodel.controls.heightDerCoef}"
                    app:orientation="horizontal"
                    app:positionChangeMultiplier="0.1"
                    app:fractionDigits="3"
                    app:minValue="0" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Restore"
                    android:onClick="@{() -> viewmodel.controls.restoreSettings()}" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Save"
                    android:onClick="@{() -> viewmodel.controls.saveCurrentSettings()}" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Send"
                    android:onClick="@{() -> viewmodel.controls.sendCurrentSettings()}" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>
